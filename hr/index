    <script>
const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbyHl2jY0oJ1Dh9cET7PYZcSZ7CRH_fw8KvVZTIKfi4mkJEpYQ7VNnbQcqMzqWlISPMmSA/exec';

// Set today's date
document.getElementById('date').valueAsDate = new Date();

// Toggle conditional fields based on radio button selection
document.querySelectorAll('input[type="radio"][data-toggle]').forEach(radio => {
    radio.addEventListener('change', function() {
        const targetId = this.dataset.toggle;
        const targetField = document.getElementById(targetId);
        const textarea = targetField.querySelector('textarea');
        
        if (this.value === '×›×Ÿ') {
            targetField.classList.add('show');
        } else {
            targetField.classList.remove('show');
            if (textarea) textarea.value = ''; // Clear the field when hidden
        }
    });
});

document.getElementById('hrForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const submitBtn = this.querySelector('.submit-btn');
    submitBtn.textContent = 'â³ ×©×•×œ×—...';
    submitBtn.disabled = true;
    
    const formData = new FormData(this);
    const data = { formType: 'hr' };
    formData.forEach((value, key) => data[key] = value);

    const hiddenForm = document.createElement('form');
    const iframe = document.createElement('iframe');
    iframe.name = 'hidden_iframe';
    iframe.style.display = 'none';
    document.body.appendChild(iframe);

    hiddenForm.method = 'POST';
    hiddenForm.target = 'hidden_iframe';
    hiddenForm.action = SCRIPT_URL;

    const input = document.createElement('input');
    input.type = 'hidden';
    input.name = 'data';
    input.value = JSON.stringify(data);
    hiddenForm.appendChild(input);

    document.body.appendChild(hiddenForm);
    hiddenForm.submit();

    setTimeout(() => {
        alert('âœ… ×”×“×™×•×•×— × ×©×œ×— ×‘×”×¦×œ×—×”!');
        this.reset();
        document.getElementById('date').valueAsDate = new Date();
        // Hide all conditional fields
        document.querySelectorAll('.conditional-field').forEach(field => {
            field.classList.remove('show');
        });
        submitBtn.textContent = 'ğŸ“¤ ×©×œ×—×™ ×“×™×•×•×—';
        submitBtn.disabled = false;
        document.body.removeChild(hiddenForm);
        document.body.removeChild(iframe);
    }, 1200);
});
    </script>
